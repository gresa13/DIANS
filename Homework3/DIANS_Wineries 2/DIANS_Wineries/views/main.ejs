        // You can use the wineryName variable to identify the specific winery for the review.
    }

    function closeReviewModal() {
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('reviewModal').style.display = 'none';
    }

    function submitReview() {
        // Handle the review submission logic here
        const reviewText = document.getElementById('reviewText').value;
        // You can send the review data to the server or perform other actions.
        // Remember to close the modal after submitting the review.
        closeReviewModal();
    }
    function openNotificationModal() {
        document.getElementById('overlay').style.display = 'block';
        document.getElementById('notificationModal').style.display = 'block';
    }

    function closeNotificationModal() {
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('notificationModal').style.display = 'none';
    }

    function submitNotification() {
        const notificationEmail = document.getElementById('notificationEmail').value;
