    <title>Main Page</title>
    <style>
        body{
            background-color:#ffffff;
        }
 li {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 22px;
    border: 1px solid lightgray;
    margin: 10px 0;
    padding: 20px;
    background-color: #e5d9dd;
    color: #5e1228;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
h1{
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    text-align: center;
    color: #5e1228;

}
iframe{
    margin-left: 30%;
}
header {
    background-color: #5e1228;
            padding: 2px;
            color: #ffffff; 
            display: flex;
            justify-content: space-between;
            align-items: center;
           
            width: 100%;
            top: 0;
            left: 0;
            z-index: 10; 
            text-align: left;
        }
    
        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ccc;
            z-index: 1000;
        }
    
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    
        .rating-button,
        .review-button,
        .notification-button {
            background-color: #800020; /* Burgundy color */
            color: #ffffff; /* White text color */
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            margin-left: 5px; /* Adjust the margin for spacing */
        }
    
        .notification-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ccc;
            z-index: 1000;
        }
    
        .notification-modal textarea {
            width: 100%;
            margin-bottom: 10px;
        }

    </style>
</head>
<body>
    <header>
        <img src="/images/logo.png" alt="Logo" id="logo" style="width:110px;height: 130px ;margin-left: 30px;"> 
        <h2 style="margin-right: 30px;font-family: 'Trebuchet MS';">Wine Spots</h2>
        
    </header>
    <h1>Wineries near you</h1>
    <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d47446.03701775628!2d21.443379156588772!3d41.992177268938455!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1swineries%20near%20Skopje!5e0!3m2!1sen!2smk!4v1703288469329!5m2!1sen!2smk" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    <ul>
       <% for (const name of names) { %>
            <li><%= name %>
                <div><button class="rating-button" onclick="openRatingModal('<%= name %>')">Rating</button>
                    <button class="review-button" onclick="openReviewModal('<%= name %>')">Review</button>
                    <button class="notification-button" onclick="openNotificationModal()">Notification</button></div></li>
        <% } %>
    </ul>

    <div class="modal notification-modal" id="notificationModal">
        <p>If you wish to receive notifications about any special events, promotions, or changes in the winery, add your email address below:</p>
        <textarea id="notificationEmail" rows="4" placeholder="Enter your email address..."></textarea>
        <button onclick="submitNotification()">Submit</button>
        <button onclick="closeNotificationModal()">Cancel</button>
    </div>
    <div class="overlay" id="overlay"></div>
    <div class="modal" id="ratingModal">
        <h2>Give a Rating</h2>
        <p>Select a rating from 1 to 5:</p>
        <select id="ratingSelect">
            <option value="1">1</option>
            <option value="2">2</option
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <button onclick="submitRating()">Submit</button>
        <button onclick="closeRatingModal()">Cancel</button>
    </div>
    <div class="modal" id="reviewModal">
        <h2>Write a Review</h2>
        <textarea id="reviewText" rows="4" cols="50" placeholder="Enter your review..."></textarea>
        <button onclick="submitReview()">Submit</button>
        <button onclick="closeReviewModal()">Cancel</button>
    </div>

    <script>
        function openRatingModal(wineryName) {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('ratingModal').style.display = 'block';
            // You can use the wineryName variable to identify the specific winery for the rating.
        }

        function closeRatingModal() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('ratingModal').style.display = 'none';
        }

        function submitRating() {
            // Handle the rating submission logic here
            const selectedRating = document.getElementById('ratingSelect').value;
            // You can send the rating data to the server or perform other actions.
            // Remember to close the modal after submitting the rating.
            closeRatingModal();
        }
        function openReviewModal(wineryName) {
